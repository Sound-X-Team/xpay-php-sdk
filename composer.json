{
    "name": "xpay/php-sdk",
    "description": "Official PHP SDK for X-Pay payment processing platform",
    "type": "library",
    "license": "MIT",
    "keywords": ["payments", "xpay", "sdk", "laravel", "php"],
    "authors": [
        {
            "name": "X-Pay Team",
            "email": "developers@xpay.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "moneyphp/money": "^4.0",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^8.0",
        "laravel/framework": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "XPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XPay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-text",
        "phpstan": "phpstan analyse --configuration=phpstan.neon",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "lint": ["@phpstan", "@cs-check"],
        "lint-fix": ["@phpstan", "@cs-fix"],
        "all": ["@lint", "@test"]
    },
    "extra": {
        "laravel": {
            "providers": [
                "XPay\\Laravel\\XPayServiceProvider"
            ],
            "aliases": {
                "XPay": "XPay\\Laravel\\Facades\\XPay"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}